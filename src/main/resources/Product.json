{
  "$schema": "http://json-schema.org/draft/#",
  "title": "Product Schema",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string", "required": true },
    "description": { "type": "string" },
    "price": { "type": "number", "minimum": 0.01 },
    "stock": { "type": "integer", "minimum": 0 }
  },
  "required": ["name", "price", "stock"]
}
